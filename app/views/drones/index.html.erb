<h1>Drones</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Carrying capacity</th>
      <th>Price</th>
      <th>Acquired date</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drones.each do |drone| %>
      <tr>
        <td><%= drone.name %></td>
        <td><%= drone.status %></td>
        <td><%= drone.carrying_capacity %></td>
        <td><%= drone.price %></td>
        <td><%= drone.acquired_date %></td>
        <td><%= drone.weight %></td>
        <td><%= link_to 'Show', drone %></td>
        <td><%= link_to 'Edit', edit_drone_path(drone) %></td>
        <td><%= link_to 'Destroy', drone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

    <tr>
      <td><%= @orion["name"] %></td>
      <td><%= @orion["status"] %></td>
      <td><%= @orion["carrying_capacity"] %></td>
      <td><%= @orion["price"] %></td>
      <td><%= @orion["acquired_date(1i)"] %>-<%= @orion["acquired_date(2i)"] %>-<%= @orion["acquired_date(3i)"] %></td>
      <td><%= @orion["weight"] %></td>
    </tr>

  </tbody>
</table>

